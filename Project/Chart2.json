{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
    "title": {
      "text": "UK Female Labour Force Participation",
      "subtitle":"Depending on Marital Status, Source:ILO-Statistics",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"},
  
    
    "data": {
      "url": "https://raw.githubusercontent.com/julietcook/JulietCook.github.io/main/Datasets/Chart2/Modcorrect.csv",
      "format": {"type": "csv"}
    },
   
    "height": 300,
    "width": 300,
    "transform": [
    {"calculate": "{'SEX_T': 'Total', 'SEX_M': 'Male','SEX_F':'Female'}[datum.sex]", "as": "sex"}],

    "mark": {"type": "line", "point": true, "tooltip": true},
    
    "encoding": {
      
      "x": {
        "field": "time",
        "type": "temporal",
        "title": null,
        "axis": {"grid": false}},
   
      "y": {
        "field": "obs_value",
        "type": "quantitative",
        "title": "Labour Force Participation rate (%)",
        "axis": {"grid": false},
        "scale": {"domain": [50, 80]},
  
        "tooltip": [
        {"field": "Date", "type": "temporal"},
        {"field": "Value", "type": "quantitative"}
      ]
        
        },
        
      "color": {
        "field": "sex",
        "type": "nominal",
        "scale": {"scheme": "inferno"},
        "title": "Gender",
        "legend":{"orient": "top-right"}
   
     }
  }
  }
